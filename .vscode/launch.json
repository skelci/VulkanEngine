{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Vulkan Engine",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/vulkan-engine.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "preLaunchTask": "build",
            "miDebuggerPath": "C:/path/to/your/gdb.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}